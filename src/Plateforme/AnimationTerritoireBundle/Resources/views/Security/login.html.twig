{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}




{% block fos_user_content %}
    <link rel="stylesheet" href="{{ asset('bundles/plateformeanimationterritoire/css/login.css') }}"/>
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

    <div align="center">

    <span>
    <h1>Animation Territoire</h1>
    </span>
        <br/>

        <form action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <label for="username">{{ 'security.login.username'|trans }}</label><br/>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" /><br/>
            <br/>
            <label for="password">{{ 'security.login.password'|trans }}</label><br/>
            <input type="password" id="password" name="_password" required="required" />
            <br/>

            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            <br/><br/><br/>
            <input type="submit" class="btn btn-success" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            <br/><br/>
            <a class="compte" href="#">Mot de passe oublié ??</a>

        </form>
    <p>La plateforme d'animation du territoire, qu'est-ce que c'est ?</p>
    <p>Si vous souhaitez vous inscrire, contacter nous au 0666666666 ou par mail à animation@territoire.fr</p>
    <br/>

    </div>
{% endblock fos_user_content %}
